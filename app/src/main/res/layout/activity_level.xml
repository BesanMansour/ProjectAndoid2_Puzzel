<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.LevelActivity"
    android:background="@color/red_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:orientation="horizontal"
        android:background="@drawable/border_frag"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_13sdp"
        android:paddingBottom="@dimen/_13sdp"
        android:gravity="center">

        <TextView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/LevelNumMystery"
            android:text="3\n Question"
            android:layout_marginLeft="@dimen/_30sdp"
            android:textSize="@dimen/_13ssp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LevelTV"
            android:text="0"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_2sdp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/LevelScore"
            android:text="0"
            android:textSize="@dimen/_14ssp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/_30sdp"/>
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="@dimen/_380sdp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/LevelPager"/>

<!--    <ImageView-->
<!--        android:id="@+id/LevelNext"-->
<!--        android:layout_width="@dimen/_45sdp"-->
<!--        android:layout_height="@dimen/_45sdp"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_margin="@dimen/_25sdp"-->
<!--        app:srcCompat="@drawable/next" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:orientation="horizontal"
        android:id="@+id/LinearSkip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_skip"
            android:id="@+id/LevelSkip"
            android:layout_marginRight="@dimen/_7sdp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            app:srcCompat="@drawable/skip" />
    </LinearLayout>




</LinearLayout>